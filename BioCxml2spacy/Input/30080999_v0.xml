      <text>Characterization of antennal chemosensilla and associated odorant binding as well as chemosensory proteins in the Eupeodes corollae (Diptera: Syrphidae).</text>
      <annotation id="1">
        <infon key="identifier"></infon>
        <infon key="type">Disease</infon>
        <infon key="updated_at">1980-01-01T00:00:00Z</infon>
        <location offset="29" length="13"/>
        <text>chemosensilla</text>
      </annotation>
      <annotation id="2">
        <infon key="identifier">290404</infon>
        <infon key="type">Species</infon>
        <infon key="updated_at">1980-01-01T00:00:00Z</infon>
